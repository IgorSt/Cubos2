<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_poster_filme"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY">

        </ImageView>

        <TextView
            android:id="@+id/text_titulo_filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_poster_filme"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="TextView"
            android:textAlignment="center"
            tools:text="TÃ­tulo do filme" />

        <TextView
            android:id="@+id/text_detalhe_filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_titulo_filme"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="TextView"
            android:textAlignment="center"
            tools:text="Detalhe do filme" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>